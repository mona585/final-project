<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/verifyMessageTextView"
        android:layout_width="@dimen/field_default_width"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:text="@string/verification_text"
        android:gravity="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCheckVerified"
        android:layout_width="@dimen/button_default_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#C56260"
        android:text="@string/check_verify_button_text"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btnResendEmail"
        android:layout_width="@dimen/button_default_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#C56260"
        android:text="@string/resend_email_button_text"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

</LinearLayout>