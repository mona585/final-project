<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_recipe_graph"
    app:startDestination="@id/homeFragment" >

    <fragment
        android:id="@+id/homeFragment"
        android:name="mona.mohamed.recipeapp.view.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mealDetailFragment"
            app:destination="@id/mealDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="mona.mohamed.recipeapp.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" >

        <action
            android:id="@+id/action_favoritesFragment_to_mealDetailFragment"
            app:destination="@id/mealDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="mona.mohamed.recipeapp.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_mealDetailFragment"
            app:destination="@id/mealDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="mona.mohamed.recipeapp.view.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about">


    <action
        android:id="@+id/action_aboutFragment_to_loginFragment"
        app:destination="@id/nav_auth_graph"
        app:popUpTo="@id/nav_recipe_graph"
        app:popUpToInclusive="true" />
</fragment>

    <include app:graph="@navigation/nav_auth_graph" />
    <fragment
        android:id="@+id/mealDetailFragment"
        android:name="mona.mohamed.recipeapp.view.detail.MealDetailFragment"
        android:label="fragment_meal_detail"
        tools:layout="@layout/fragment_meal_detail" >

        <argument
            android:name="mealId"
            app:argType="string" />
    </fragment>
</navigation>
